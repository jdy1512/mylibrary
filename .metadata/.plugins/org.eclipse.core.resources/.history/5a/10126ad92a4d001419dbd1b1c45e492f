import java.io.BufferedReader;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;

public class Encrypt {
	public static void main(String[] args) {
		int ran = (int) (Math.random() * 25);

		File file = new File("C:/Users/C3-23/Desktop/sample.txt");
		File encryptFile = new File("C:/Users/C3-23/Desktop/encrypt.txt");
		BufferedReader br = null;
		FileOutputStream fos = null;
		try {
			FileReader fr = new FileReader(file);
			fos = new FileOutputStream(encryptFile);
			br = new BufferedReader(fr);

			String str = null;
			while ((str = br.readLine().trim()) != null) {
				String lineStr = str.toLowerCase();
				for (int i = 0; i < lineStr.length(); i++) {
					int c = lineStr.charAt(i);
					if (c != ' ') {
						fos.write(c);
						fos.flush();
					}
				}
			}
		} catch (IOException e) {
			e.printStackTrace();
		} finally {
			if(br != null){
				try {
					br.close();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
			if(fos != null){
				try {
					fos.close();
				} catch (IOException e) {
					e.printStackTrace();
				}
			}
		}

	}
}
