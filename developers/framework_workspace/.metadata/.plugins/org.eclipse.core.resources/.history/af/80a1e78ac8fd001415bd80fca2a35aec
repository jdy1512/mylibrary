<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <context:component-scan base-package="spring.mvc.controller"></context:component-scan>
	<mvc:annotation-driven></mvc:annotation-driven>
	
	<!-- 
		interceptors : interceptor들을 등록하는 태그
		하위 : interceptor : 하나의 interceptor등록
	 -->
	<mvc:interceptors>
	    <mvc:interceptor>
	        <!-- interceptor가 호출될 사용자 요청 url패턴 : 
	        	Ant패턴(* - 0글자이상, ? : 한글자, ** : 0개이상의(자신을포함한) 하위경로 -->
	        <mvc:mapping path="/*"/>
	        <bean class="spring.mvc.interceptor.FirstInterceptor"/>
	    </mvc:interceptor>
	</mvc:interceptors>
</beans>
