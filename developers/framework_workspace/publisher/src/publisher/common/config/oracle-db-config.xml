<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
    <typeAliases>
        <package name="publisher.vo"/>
    </typeAliases>
    
    <environments default="publisher">
        <environment id="publisher">
            <transactionManager type="JDBC"></transactionManager>
            <dataSource type="POOLED">
                <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
                <property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:XE"/>
                <property name="username" value="scott"/>
                <property name="password" value="tiger"/>
                
                <property name="poolMaximumActiveConnections" value="50"/>
                <property name="poolMaximumIdleConnections" value="30"/>
            </dataSource>
        </environment>
    </environments>
    
    <mappers>
        <mapper resource="publisher/common/mapper/publisher-mapper.xml"/>
        <mapper resource="publisher/common/mapper/book-mapper.xml"/>
    </mappers>
</configuration>
